{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",  // Change to ESNext for better compatibility with ts-node
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["bin/**/*", "lib/**/*"],
  "exclude": ["node_modules"]
}
